@{
    ViewData["Title"] = "Home Page";
}
@model Dish
<div class="container-fluid text-center">
    <div class="row">
        <h1>Add a New Dish</h1>
        <hr>
    </div>
    <form asp-action="Create" asp-controller="Home" method="post" class="w-75 mx-auto">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Name">Name of Dish</span>
                        <input asp-for="Name" class="form-control" type="text" id="Name">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Chef">Name of Chef</span>
                        <input asp-for="Chef" class="form-control" type="text" id="Chef">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Calories">Calories</span>
                        <input asp-for="Calories" class="form-control" type="number" id="Calories">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Tastiness">Tastiness</span>
                        <select asp-for="Tastiness" class="form-control" type="text" id="Tastiness">
                            <option selected>Level of Tastiness</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Description"> Description </span>
                        <textarea asp-for="Description" class="form-control" id="Description" cols="20"
                            rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <button class="btn btn-dark w-25 mx-auto" type="submit">Submit</button>
            </div>
        </div>
    </form>
    <span class="text-danger" asp-validation-for="Name"></span>
    <br>
    <span class="text-danger" asp-validation-for="Chef"></span>
    <br>
    <span class="text-danger" asp-validation-for="Calories"></span>
    <br>
    <span class="text-danger" asp-validation-for="Tastiness"></span>
    <br>
    <span class="text-danger" asp-validation-for="Description"></span>
</div>